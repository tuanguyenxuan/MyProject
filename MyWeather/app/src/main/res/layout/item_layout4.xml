<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="@dimen/marginStyle"
    android:layout_marginLeft="@dimen/marginStyle"
    android:layout_marginRight="@dimen/marginStyle"
    android:background="@color/gray_transparent"
    android:padding="10dp">

    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Wind"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/lnear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="11"
            android:textColor="#ffff"
            android:textSize="25sp" />


    </LinearLayout>

    <View
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lnear"
        android:background="@color/gray" />

    <ImageView
        android:id="@+id/mAnimation"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:src="@drawable/fan1" />


    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/t5"
        android:layout_marginRight="30dp"
        android:text=" ↑↑ Barometer"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/t6"
        android:layout_marginRight="100dp"
        android:text="1000"
        android:textColor="#ffff"
        android:textSize="25dp" />

</RelativeLayout>