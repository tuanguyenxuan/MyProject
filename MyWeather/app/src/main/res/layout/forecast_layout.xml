<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/marginStyle"
    android:layout_marginLeft="@dimen/marginStyle"
    android:layout_marginRight="@dimen/marginStyle"
    android:background="@color/gray_transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.windows10timt.myweather.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:padding="10dp"
        android:id="@+id/listForecast"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>